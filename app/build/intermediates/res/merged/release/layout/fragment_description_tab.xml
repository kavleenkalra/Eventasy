<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.eventasy.ui.DescriptionTabFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/event_description_card_view"
        android:layout_margin="@dimen/event_detail_card_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/card_view_corner_radius"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/event_description_text_view"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/event_detail_card_margin"
            android:layout_marginEnd="@dimen/event_detail_card_margin"
            android:layout_marginLeft="@dimen/event_detail_card_margin"
            android:layout_marginRight="@dimen/event_detail_card_margin"
            android:layout_marginTop="@dimen/event_detail_card_margin"
            android:layout_marginBottom="60dp"
            android:lineSpacingMultiplier="1.25"
            android:textColor="@color/event_detail_color"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>
