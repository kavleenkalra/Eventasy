<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.eventasy.ui.DetailsTabFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/date_venue_card_view"
        android:layout_marginStart="@dimen/event_detail_card_margin"
        android:layout_marginEnd="@dimen/event_detail_card_margin"
        android:layout_marginLeft="@dimen/event_detail_card_margin"
        android:layout_marginRight="@dimen/event_detail_card_margin"
        android:layout_marginTop="@dimen/event_detail_text_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="@dimen/card_view_elevation"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/event_detail_start_time"
                style="?android:attr/textAppearanceLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:textColor="@color/date_color"
                android:layout_marginLeft="@dimen/event_detail_text_margin"
                android:layout_marginRight="@dimen/event_detail_text_margin"
                android:layout_marginStart="@dimen/event_detail_text_margin"
                android:layout_marginEnd="@dimen/event_detail_text_margin"
                android:layout_marginTop="@dimen/event_detail_text_margin"/>

            <TextView
                android:id="@+id/event_detail_venue_name"
                style="?android:attr/textAppearanceMedium"
                android:textColor="@color/event_detail_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/event_detail_text_margin"
                android:layout_marginRight="@dimen/event_detail_text_margin"
                android:layout_marginStart="@dimen/event_detail_text_margin"
                android:layout_marginEnd="@dimen/event_detail_text_margin"
                android:layout_marginTop="@dimen/event_detail_text_margin"
                android:layout_below="@id/event_detail_start_time"
                android:lineSpacingMultiplier="1.25"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/event_detail_card_view"
        android:layout_marginStart="@dimen/event_detail_card_margin"
        android:layout_marginEnd="@dimen/event_detail_card_margin"
        android:layout_marginLeft="@dimen/event_detail_card_margin"
        android:layout_marginRight="@dimen/event_detail_card_margin"
        android:layout_marginTop="@dimen/event_detail_text_margin"
        android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_venue_card_view"
        card_view:cardElevation="@dimen/card_view_elevation"
        card_view:cardCornerRadius="10dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/event_detail_url"
            style="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/holo_blue_dark"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/event_detail_card_margin"
            android:lineSpacingMultiplier="1.25" />

    </android.support.v7.widget.CardView>

</RelativeLayout>
